{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block page_title %}
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">{{ block('title') }}</h1>
            <p class="text-muted small mb-0">Bienvenue, {{ app.user.username }}</p>
        </div>
        <div class="d-flex gap-2">
            <a href="#" class="btn btn-outline-success btn-sm">
                <i class="bi bi-bell me-1"></i> Notifications
            </a>
            <a href="{{ path('app_donation_new') }}" class="btn btn-primary btn-sm">
                <i class="bi bi-plus me-1"></i> Réaliser un don
            </a>
        </div>
    </div>
{% endblock %}

{% block body %}
    <!-- Stats Cards Row -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Total béneficiaire</h6>
                            <h3 class="mb-0">8,549</h3>
                            <small class="text-success">
                                    <i class="bi bi-arrow-up me-1"></i>12.5%
                                </small>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-people text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Total don réalisé</h6>
                            <h3 class="mb-0">XAF 24,890</h3>
                            <small class="text-success">
                                <i class="bi bi-arrow-up me-1"></i>8.2%
                            </small>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded fw-bold">
                            <i class="bi bi-currency-exchange"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Total don en attente</h6>
                            <h3 class="mb-0">XAF 1,236</h3>
                            <small class="text-danger">
                                <i class="bi bi-arrow-down me-1"></i>3.1%
                            </small>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                            <i class="bi bi-currency-exchange text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Total donateurs</h6>
                            <h3 class="mb-0">15</h3>
                            <small class="text-success">
                                    <i class="bi bi-arrow-up me-1"></i>5.8%
                                </small>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded">
                            <i class="bi bi-bank text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="row g-3">
        <!-- Activity Timeline -->
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Activité récente</h5>
                        <button class="btn btn-link text-decoration-none p-0">Voir tout</button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="d-flex mb-3">
                            <div class="flex-shrink-0">
                                <div class="bg-primary bg-opacity-10 p-2 rounded">
                                    <i class="bi bi-people text-primary"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Nouvel utilisateur enregistré</h6>
                                <p class="text-muted small mb-0">2 minutes ago</p>
                            </div>
                        </div>
                        <div class="d-flex mb-3">
                            <div class="flex-shrink-0">
                                <div class="bg-success bg-opacity-10 p-2 rounded">
                                    <i class="bi bi-check text-success"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Don effectuer avec succès</h6>
                                <p class="text-muted small mb-0">1 hour ago</p>
                            </div>
                        </div>
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <div class="bg-warning bg-opacity-10 p-2 rounded">
                                    <i class="bi bi-bell text-warning"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">Vous avez reçu une nouvelle notification</h6>
                                <p class="text-muted small mb-0">2 hours ago</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
