<div{{ attributes }}>
    {{ form_start(form) }}
        <div class="row">
            {{ form_row(form.companyName) }}
        </div>
        <div class="row">
            <div class="col">{{ form_row(form.address) }}</div>
            <div class="col">{{ form_row(form.bankAddress) }}</div>
        </div>
        <div class="row">
            <div class="col">{{ form_row(form.country) }}</div>
            {% if form.city is defined %}
                <div class="col">{{ form_row(form.city) }}</div>
            {% endif %}
        </div>
        <div class="row">
            <div class="col">{{ form_row(form.phone1) }}</div>
            <div class="col">{{ form_row(form.phone2) }}</div>
            <div class="col">{{ form_row(form.phone3) }}</div>
        </div>
        <div class="row">
           <div class="col">{{ form_row(form.mail) }}</div>
           <div class="col">{{ form_row(form.fax) }}</div>
           <div class="col">{{ form_row(form.location) }}</div>
           <div class="col">{{ form_row(form.rib) }}</div>
        </div>
        <div class="row">
            {{ form_row(form.obs) }}
        </div>
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-sd-card-fill"></i>
            {{ button_label|default('Enregistrer') }}
        </button>
        <a href="{{ path('app_donor_index') }}" class="btn btn-light">
            <i class="bi bi-arrow-left" aria-hidden="true"></i>
            Retour
        </a>
    {{ form_end(form) }}
</div>
