            </tr>
            <tr>
                <th>UpdateAt</th>
                <td>{{ donation.updateAt ? donation.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Obs</th>
                <td>{{ donation.obs }}</td>
