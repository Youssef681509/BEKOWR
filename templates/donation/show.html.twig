    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ donation.id }}</td>
            </tr>
            <tr>
                <th>DateOfDonation</th>
                <td>{{ donation.dateOfDonation ? donation.dateOfDonation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateOfReceipt</th>
                <td>{{ donation.dateOfReceipt ? donation.dateOfReceipt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DonAmount</th>
                <td>{{ donation.donAmount }}</td>
            </tr>
            <tr>
                <th>DonCurrency</th>
                <td>{{ donation.donCurrency }}</td>
            </tr>
            <tr>
                <th>StatusOfDonation</th>
                <td>{{ donation.statusOfDonation }}</td>
            </tr>
            <tr>
                <th>PaymentMethod</th>
                <td>{{ donation.paymentMethod }}</td>
            </tr>
            <tr>
                <th>PasswordDon</th>
                <td>{{ donation.passwordDon }}</td>
            </tr>
            <tr>
                <th>ExtCode</th>
                <td>{{ donation.extCode }}</td>
            </tr>
            <tr>
