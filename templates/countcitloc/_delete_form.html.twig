<form method="post" action="{{ path('app_contcitloc_delete', {'id': loc.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette élément?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ loc.id) }}">

    <a href="{{ path('app_contcitloc_index') }}" class="btn btn-light">
       <i class="bi bi-arrow-left-circle"></i> Retour
    </a>

    <a href="{{ path('app_contcitloc_edit', {'id': loc.id}) }}" class="btn btn-success">
        <i class="bi bi-pencil"></i>
        Modifier
    </a>

    <button class="btn btn-danger">
        <i class="bi bi-trash"></i>
        Supprimer
    </button>

</form>
