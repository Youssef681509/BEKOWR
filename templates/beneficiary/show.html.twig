
{% extends 'base.html.twig' %}
{% block title %}Information du bénéficiaire{% endblock %}

{% block page_title %}
   <i class="bi bi-info-circle"></i> {{ block('title') }}
{% endblock %}

{% block page_action %}
    {{ include('beneficiary/_delete_form.html.twig') }}
{% endblock %}

{% block body %}

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Nom(s)</th>
                <td>{{ beneficiary.lastName }}</td>
            </tr>
            <tr>
                <th>Prénom(s)</th>
                <td>{{ beneficiary.firstName }}</td>
            </tr>
            <tr>
                <th>Civilité</th>
                <td>{{ beneficiary.civility }}</td>
            </tr>
            <tr>
                <th>Date d'anniversaire</th>
                <td>{{ beneficiary.dateOfBirth ? beneficiary.dateOfBirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Lieu de naissance</th>
                <td>{{ beneficiary.placeOfBirth }}</td>
            </tr>
            <tr>
                <th>Titre pièce</th>
                <td>{{ beneficiary.titleOfIdDoc }}</td>
            </tr>
            <tr>
                <th>Numéro de pièce</th>
                <td>{{ beneficiary.idNumber }}</td>
            </tr>
            <tr>
                <th>Date de </th>
                <td>{{ beneficiary.donSrvStrDate ? beneficiary.donSrvStrDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ beneficiary.category }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ beneficiary.type }}</td>
            </tr>
            <tr>
                <th>ElecIdDoc</th>
                <td>{{ beneficiary.elecIdDoc }}</td>
            </tr>
            <tr>
                <th>Enable</th>
                <td>{{ beneficiary.enable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ beneficiary.status }}</td>
            </tr>
            <tr>
                <th>CardType</th>
                <td>{{ beneficiary.cardType }}</td>
            </tr>
            <tr>
                <th>CompanyName</th>
                <td>{{ beneficiary.companyName }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ beneficiary.address }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ beneficiary.city.name }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ beneficiary.city.country.name }}</td>
            </tr>
            <tr>
                <th>Téléphone 1</th>
                <td>{{ beneficiary.phone1 }}</td>
            </tr>
            <tr>
                <th>Téléphone 2</th>
                <td>{{ beneficiary.phone2 }}</td>
            </tr>
            <tr>
                <th>Téléphone 3</th>
                <td>{{ beneficiary.phone3 }}</td>
            </tr>
            <tr>
                <th>Fax</th>
                <td>{{ beneficiary.fax }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ beneficiary.mail }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ beneficiary.location }}</td>
            </tr>
            <tr>
                <th>RIB</th>
                <td>{{ beneficiary.rib }}</td>
            </tr>
            {# <tr>
                <th>ExtCode</th>
                <td>{{ beneficiary.extCode }}</td>
            </tr> #}
            <tr>
                <th>Date de créat.</th>
                <td>{{ beneficiary.createdAt ? beneficiary.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date Modif.</th>
                <td>{{ beneficiary.updateAt ? beneficiary.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Observation</th>
                <td>{{ beneficiary.obs }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
