<table class="table table-striped table-borderless">
        <thead class="table-dark">
            <tr>
                <th>Code</th>
                <th>Nom(s)</th>
                <th>Prénom(s)</th>
                <th>Civilité</th>
                <th>Date d'anniv.</th>
                <th>Lieu de Naiss.</th>
                <th>Titre Pièce</th>
                <th>N° pièce</th>
                <th>Date début serv. don</th>
                <th>Categorie</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for beneficiary in beneficiaries %}
            <tr>
                <td>{{ beneficiary.extCode }}</td>
                <td>{{ beneficiary.firstName }}</td>
                <td>{{ beneficiary.lastName }}</td>
                <td>{{ beneficiary.civility }}</td>
                <td>{{ beneficiary.donSrvStrDate ? beneficiary.donSrvStrDate|date('Y-m-d') : '' }}</td>
                <td>{{ beneficiary.category }}</td>
                <td>{{ beneficiary.type }}</td>
                <td>{{ beneficiary.enable ? 'Actif' : 'Inactif' }}</td>
                <td>{{ beneficiary.status }}</td>
                <td>{{ beneficiary.cardType }}</td>
                <td>
                    <div class="dropdown dropstart">
						<button class="btn btn-sm btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
							Action
						</button>
						<ul class="dropdown-menu">
							<li>
								<a class="dropdown-item" href="{{ path('app_beneficiary_show', {id: beneficiary.id}) }}">
									Détails Info. Beneficiaire
								</a>
							</li>
							<li>
								<a class="dropdown-item" href="{{ path( 'app_beneficiary_edit', { id: beneficiary.id } ) }}">
									Modifier les informations
								</a>
							</li>
							{# <li><hr class="dropdown-divider"></li>
                            <li></li> #}
            		    </ul>
        		    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="31">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>