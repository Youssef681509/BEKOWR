<table class="table table-striped border-1 border-bottom">
        <thead class="table-dark">
            <tr>
                <th>Code</th>
                <th>Nom/Raison sociale</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>Agence</th>
                <th>Téléphone</th>
                <th>Fax</th>
                <th>Email</th>
                <th>RIB</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bank in banks %}
            <tr>
                <td>{{ bank.extCode }}</td>
                <td>{{ bank.companyName }}</td>
                <td>{{ bank.address|slice(0, 5) }}...</td>
                <td>{{ bank.city ? bank.city.name|slice(0, 5) : '' }}...</td>
                <td>{{ bank.city ? bank.city.country.name|slice(0, 5) : '' }}</td>
                <td>{{ bank.agency }}</td>
                <td>{{ bank.phone1|slice(0, 10) }}...</td>
                <td>{{ bank.fax }}</td>
                <td>{{ bank.mail|slice(0, 10) }}...</td>
                <td>{{ bank.rib|slice(0, 5) }}...</td>
                <td>
                    <div class="dropdown dropstart">
						<button class="btn btn-sm btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
							Action
						</button>
						<ul class="dropdown-menu">
							<li>
								<a class="dropdown-item" href="{{ path('app_bank_show', {id: bank.id}) }}">
									Détails Info. Banque
								</a>
							</li>
							<li>
								<a class="dropdown-item" href="{{ path( 'app_bank_edit', { id: bank.id } ) }}">
									Modifier les informations
								</a>
							</li>
							{# <li><hr class="dropdown-divider"></li>
                            <li></li> #}
            		    </ul>
        		    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
</table>