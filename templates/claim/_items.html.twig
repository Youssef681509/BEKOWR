<table class="table table-striped table-borderless">
        <thead class="table-dark">
            <tr>
                <th>Code</th>
                <th>Date Récl.</th>
                <th>Date Cloture</th>
                <th>Type Récl.</th>
                <th>Montant</th>
                <th>Mdp Réclamation</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for claim in claims %}
            <tr>
                <td>{{ claim.id }}</td>
                <td>{{ claim.dateClaim ? claim.dateClaim|date('d/m/Y') : '' }}</td>
                <td>{{ claim.dateClosing ? claim.dateClosing|date('d/m/Y') : '' }}</td>
                <td>{{ claim.typeOfClaim }}</td>
                <td>{{ claim.amount }}</td>
                <td>{{ claim.passwordClaim }}</td>
                <td>{{ claim.status }}</td>
                <td>
                    <a href="{{ path('app_claim_show', {'id': claim.id}) }}">show</a>
                    <a href="{{ path('app_claim_edit', {'id': claim.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>