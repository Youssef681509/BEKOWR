{{ form_start(form, {attr: {'disabled': true}}) }}
<div class="row">
    <div class="col-2">
        {{ form_row(form.extCode) }}
    </div>
    <div class="col-5">
        {{ form_row(form.lastName) }}
    </div>
    <div class="col-5">
        {{ form_row(form.firstName) }}
    </div>
</div>
<div class="row">
    <div class="col" {{ stimulus_controller('flatpickr', {format: 'd-m-Y'}) }}>
        {{ form_row(form.birthDay) }}
    </div>
    <div class="col mt-4 me-3">
        <div class="form-check-label">
            {{ form_label(form.eanable) }}
        </div>
        <div class="form-check form-switch">
            {{ form_row(form.eanable) }}
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        {{ form_row(form.country) }}
    </div>
    <div class="col">
        {{ form_row(form.city) }}
    </div>
</div>
<div class="row">
    <div class="col-6">
        {{ form_row(form.email) }}
    </div>
    <div class="col-3">
        {{ form_row(form.phone1) }}
    </div>
    <div class="col-3">
        {{ form_row(form.phone2) }}
    </div>
</div>

<div class="row">
    <div class="col">
        {{ form_row(form.address) }}
    </div>
</div>
<div class="row">
    <div class="col">
        {{ form_row(form.userRoles) }}
    </div>
</div>
{{ form_widget(form) }}
<button class="btn btn-primary" {{ is_granted('ROLE_SUP') ? '' : 'disabled' }}>
    <i class="bi bi-sd-card" aria-hidden="true"></i>
    {{ button_label|default('Enregistrer') }}
</button>
<a href="{{ path('app_user_index') }}" class="btn btn-light">
    <i class="bi bi-arrow-left" aria-hidden="true"></i>
    Retour
</a>
{{ form_end(form) }}
