{% extends 'baseSecurity.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post" class="form-signin w-100 m-auto mb-5">

    <h1 class="fw-bold text-center mb-4 mt-lg-5">BEKOWR</h1>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h4 mb-3 font-weight-normal">Veuillez vous connecter</h1>
    <div class="">
        <label for="floatingInput">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="floatingInput" class="form-control" autocomplete="email" required autofocus>
    </div>
    <div class="">
        <label for="floatingPassword">Mot de passe</label>
        <input type="password" name="password" id="floatingPassword" class="form-control" autocomplete="current-password" required>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="form-check text-start my-3">
        <label>
            <input type="checkbox" name="_remember_me"  class="form-check-input" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">Se souvenir de moi</label>
        </label>
    </div>

    <div class="d-flex gap-2 row">
        <button class="btn btn-lg btn-primary" type="submit">
            Se connecter
        </button>
        <a href="{{ path('app_user_register') }}" class="btn btn-lg btn-outline-success">
            S'inscrire
        </a>
    </div>
     {# <p class="mt-5 mb-3 text-center text-body-secondary">&copy; 2025â€“2026</p> #}
</form>
{% endblock %}
