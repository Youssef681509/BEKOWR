<?php

namespace App\Repository;

use App\Entity\BankBis;
use Doctrine\Bundle\DoctrineBundle\Repository\ServiceEntityRepository;
use Doctrine\Persistence\ManagerRegistry;

/**
 * @extends ServiceEntityRepository<Bank>
 */
class BankBisRepository extends ServiceEntityRepository
{
    public function __construct(ManagerRegistry $registry)
    {
        parent::__construct($registry, BankBis::class);
    }

    public function getId(int $id) {
        return $this->createQueryBuilder('b0')
            ->where('b0.id = :countries_id')
            ->setParameter(':countries_id', $id)
            ->getQuery()
            ->getResult();
    }

